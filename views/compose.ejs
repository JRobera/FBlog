<%- include("partials/header.ejs") -%>

<div class="compose-contain">
    <form class="compose"  id="formC" name="com" action="/admin/compose" method="post" enctype="multipart/form-data">
        <div>
            <label for="">Title</label>
            <input type="text" name="postTitle" placeholder="Enter post title">
        </div>
        <div>
            <label for="">Upload Image</label>
            <input type="file" id="postImage" name="postImage" accept="image/*">
        </div>
        <div>
            <label for="">Post</label>
            <textarea name="postBody" id="postBody" cols="40" rows="20"></textarea>
        </div>
        <button type="submit" name="btn">Post</button>
    </form>
</div>

